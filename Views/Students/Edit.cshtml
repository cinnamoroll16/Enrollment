@model EnrollmentSystem.Web.Models.Entities.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light background for contrast */
            padding: 20px; /* Add padding around the body */
        }

        .container {
            border-radius: 10px; /* Rounded corners for the container */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            background-color: white; /* White background for the form */
            padding: 20px; /* Padding inside the container */
        }

        h1, h2 {
            padding: 15px; /* Padding inside the box */
            border: 2px solid #0056b3; /* Border color and thickness */
            border-radius: 8px; /* Rounded corners */
            background-color: #f0f8ff; /* Light background color */
            margin: 20px 0; /* Space above and below */
        }

        h1 {
            font-size: 2.5rem; /* Size of H1 */
            color: #004085; /* Text color */
            text-align: center; /* Center alignment */
        }

        h2 {
            font-size: 2rem; /* Size of H2 */
            color: #0056b3; /* Text color */
            text-align: left; /* Left alignment */
        }

        .form-label {
            font-weight: bold; /* Make the labels bold */
        }

        .form-control {
            border: 1px solid #ced4da; /* Border color */
            border-radius: 5px; /* Slightly rounded corners */
        }

        .btn-primary {
            background-color: #004085; /* Primary button color */
            color: white; /* White text */
            border-radius: 5px; /* Rounded corners */
            transition: background-color 0.3s ease; /* Smooth transition for hover effects */
        }

            .btn-primary:hover {
                background-color: #007bff; /* Bootstrap primary color on hover */
            }

        .btn-danger {
            background-color: #dc3545; /* Bootstrap danger color */
            color: white; /* White text */
            border-radius: 5px; /* Rounded corners */
            transition: background-color 0.3s ease; /* Smooth transition for hover effects */
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker shade on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>@ViewData["Title"] Edit Student</h1>

        @if (Model is null)
        {
            <p>No Student Found in this ID</p>
        }
        else
        {
            <form method="post">
                <div class="mt-3">
                    <label class="form-label">ID</label>
                    <input type="text" class="form-control" asp-for="StudentId" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="StudentLastName" />
                </div>

                <div class="mt-3">
                    <label class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="StudentFirstName" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Middle Name</label>
                    <input type="text" class="form-control" asp-for="StudentMiddleName" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Course</label>
                    <input type="text" class="form-control" asp-for="StudentCourse" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Year</label>
                    <input type="text" class="form-control" asp-for="StudentYear" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Remarks</label>
                    <input type="text" class="form-control" asp-for="StudentRemarks" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Status</label>
                    <input type="text" class="form-control" asp-for="StudentStatus" />
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="Students" asp-action="List" class="btn btn-secondary ms-3">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        }
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.0/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</body>
</html>
