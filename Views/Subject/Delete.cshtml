@model EnrollmentSystem.Web.Models.Entities.Subject

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Subject</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light background for contrast */
            padding: 20px; /* Add padding around the body */
        }

        .container {
            border-radius: 10px; /* Rounded corners for the container */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            background-color: white; /* White background for the form */
            padding: 20px; /* Padding inside the container */
        }

        h1 {
            padding: 15px; /* Padding inside the box */
            border: 2px solid #0056b3; /* Border color and thickness */
            border-radius: 8px; /* Rounded corners */
            background-color: #f0f8ff; /* Light background color */
            font-size: 2.5rem; /* Size of H1 */
            color: #004085; /* Text color */
            text-align: center; /* Center alignment */
            margin: 20px 0; /* Space above and below */
        }

        .form-label {
            font-weight: bold; /* Make the labels bold */
        }

        .form-control {
            border: 1px solid #ced4da; /* Border color */
            border-radius: 5px; /* Slightly rounded corners */
        }

        .btn-danger {
            background-color: #dc3545; /* Bootstrap danger color */
            color: white; /* White text */
            border-radius: 5px; /* Rounded corners */
            transition: background-color 0.3s ease; /* Smooth transition for hover effects */
        }

            .btn-danger:hover {
                background-color: #c82333; /* Darker shade on hover */
            }

        .btn-secondary {
            background-color: #6c757d; /* Bootstrap secondary color */
            color: white; /* White text */
            border-radius: 5px; /* Rounded corners */
            transition: background-color 0.3s ease; /* Smooth transition for hover effects */
        }

            .btn-secondary:hover {
                background-color: #5a6268; /* Darker shade on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Delete Subject Data</h1>

        @if (Model == null)
        {
            <p>No Subject Found for this ID</p>
        }
        else
        {
            <form method="post" asp-action="Delete" asp-controller="Subjects">
                <input asp-for="Id" hidden />

                <div class="mt-3">
                    <label class="form-label">Subject Code</label>
                    <input type="text" class="form-control" asp-for="SubjectCode" readonly />
                </div>

                <div class="mt-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" asp-for="Description" disabled />
                </div>

                <div class="mt-3">
                    <label class="form-label">Units</label>
                    <input type="text" class="form-control" asp-for="Units" disabled />
                </div>

                <div class="col text-center">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                    <a asp-controller="Subjects" asp-action="List" class="btn btn-secondary ms-3">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        }
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.2.0/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</body>
</html>
