<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Enrollment System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EnrollmentSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --blue: #287bff;
            --white: #fff;
            --grey: #f5f5f5;
            --black1: #222;
            --black2: #999;
        }

        body {
            min-height: 100vh;
            display: flex;
            overflow-x: hidden;
        }

        .navigation {
            position: fixed;
            width: 300px;
            height: 100%;
            background: var(--blue);
            transition: 0.5s;
            overflow: hidden;
            border-left: 10px solid var(--blue);
        }

            .navigation.active {
                width: 65px;
            }

            .navigation ul {
                position: absolute;
                top: 0;
                left: 0;
                list-style: none;
                width: 100%;
            }

                .navigation ul li {
                    width: 100%;
                    position: relative;
                    height: 60px;
                    display: flex;
                    align-items: center;
                    padding: 0 0 0 10px;
                    cursor: pointer;
                    border-top-left-radius: 30px;
                    border-bottom-left-radius: 30px;
                }

                    .navigation ul li:hover,
                    .navigation ul li.hovered {
                        background: var(--white);
                    }

                    .navigation ul li:nth-child(1) {
                        margin-bottom: 40px;
                        pointer-events: none;
                        padding: 0 0 0 10px !important;
                    }

                    .navigation ul li a {
                        text-decoration: none;
                        position: relative;
                        width: 100%;
                        color: var(--white);
                        font-size: 16px;
                        display: flex;
                        align-items: center;
                        transition: all 0.5s;
                    }

                    .navigation ul li:hover a,
                    .navigation ul li.hovered a {
                        color: var(--blue);
                    }

                    .navigation ul li a .icon {
                        margin-right: 20px;
                        font-size: 25px;
                        line-height: 60px;
                        position: relative;
                        display: block;
                    }

                    .navigation ul li a .title {
                        width: 100%;
                    }

                    .navigation ul li:hover a::before,
                    .navigation ul li.hovered a::before {
                        position: absolute;
                        pointer-events: none;
                        right: 0;
                        top: -50px;
                        content: '';
                        height: 50px;
                        width: 50px;
                        border-radius: 50%;
                        box-shadow: 35px 35px 0px 10px var(--white);
                    }

                    .navigation ul li:hover a::after,
                    .navigation ul li.hovered a::after {
                        position: absolute;
                        pointer-events: none;
                        right: 0;
                        bottom: -50px;
                        content: '';
                        height: 50px;
                        width: 50px;
                        border-radius: 50%;
                        box-shadow: 35px -35px 0px 10px var(--white);
                    }

        .main {
            margin-left: 300px;
            width: calc(100% - 300px);
            transition: 0.5s;
            padding: 50px;
            background: #f5f5f5;
        }

        footer {
            background-color: #004085;
            color: white;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            position: fixed;
            bottom: 0;
            left: 320px; /* Adjust to match the width of the sidebar */
            width: calc(100% - 300px);
        }

        /* Responsive Styles */
        @@media (max-width: 992px) {
            .navigation {
                width: 100px;
            }

            .main {
                margin-left: 100px;
                width: calc(100% - 100px);
            }

            footer {
                left: 100px;
                width: calc(100% - 100px);
            }

            .navigation ul li .icon {
                font-size: 20px;
            }

            .navigation ul li a .title {
                font-size: 14px;
            }
        }

        @@media (max-width: 768px) {
            .navigation {
                width: 65px;
            }

            .main {
                margin-left: 65px;
                width: calc(100% - 65px);
            }

            footer {
                left: 65px;
                width: calc(100% - 65px);
            }

            .navigation ul li a .title {
                display: none; /* Hide titles for smaller screens */
            }

            .navigation ul li .icon {
                font-size: 18px;
            }
        }

        @@media (max-width: 576px) {
            .navigation {
                position: relative;
                width: 100%;
                height: auto;
            }

            .main {
                margin-left: 0;
                width: 100%;
            }

            footer {
                left: 0;
                width: 100%;
            }

            .navigation ul li {
                justify-content: center;
            }

            .navigation ul li .icon {
                font-size: 15px;
            }
        }
    </style>
</head>

<body>
    <div class="navigation">
        <ul>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="icon"><i class="fas fa-book-reader"></i></span>
                    <span class="title">Enrollment System</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="icon"><i class="fas fa-home"></i></span>
                    <span class="title">Home</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Students" asp-action="List">
                    <span class="icon"><i class="fas fa-list"></i></span>
                    <span class="title">List</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Students" asp-action="Add">
                    <span class="icon"><i class="fas fa-user-plus"></i></span>
                    <span class="title">Add Students</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Subject" asp-action="Add" class="d-flex align-items-center">
                    <span class="icon me-2"><i class="fas fa-user-plus"></i></span>
                    <span class="title">Add Subject</span>
                </a>

            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Login">
                    <span class="icon"><i class="fas fa-user-circle"></i></span>
                    <span class="title">Login</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer>
            <div class="footer-content text-center">
                <p>&copy; 2024 Enrollment System. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
